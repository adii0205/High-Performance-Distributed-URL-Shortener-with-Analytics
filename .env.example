# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=url_shortener
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_SIZE=20

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# JWT Authentication (v2.0)
JWT_SECRET=your-ultra-secure-secret-key-change-this-in-production
JWT_EXPIRY=7d

# Cache Settings
CACHE_TTL_SECONDS=3600
LRU_CACHE_MAX_SIZE=100

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_CREATE_URLS=100
RATE_LIMIT_REDIRECTS=1000
RATE_LIMIT_GLOBAL_IP=1000

# Analytics & Real-time (v2.0)
ANALYTICS_BATCH_SIZE=1000
ANALYTICS_BATCH_TIMEOUT_MS=5000
ENABLE_REALTIME_ANALYTICS=true

# Security
CORS_ORIGIN=*
HELMET_ENABLED=true

# URLs Configuration
SHORT_CODE_LENGTH=6
SHORT_CODE_MAX_LENGTH=10

# Features
ENABLE_CUSTOM_DOMAINS=true
ENABLE_QR_CODE=true
ENABLE_LINK_PREVIEW=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_GRAPHQL=true

